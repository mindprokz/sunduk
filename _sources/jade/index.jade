// lang vars
case process.env.NODE_ENV
  when 'ru'
    - var lang = 'ru-RU'
  when 'eng'
    - var lang = 'en-EN'
  when 'kz'
    - var lang = 'kz-KZ'
doctype html
html(lang="" + lang)
  head
    include sections/header.jade
  body
    include sections/menu.jade
    include sections/main.jade
    include sections/about.jade
    include sections/interior.jade
    include sections/menu_rest.jade
    //include sections/stocks.jade
    include sections/review.jade
    include sections/map.jade
    include sections/fix_menu.jade
    include sections/feedback_modal.jade
    include sections/footer.jade
